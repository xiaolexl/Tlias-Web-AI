<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itxiaole.mapper.ClazzsMapper">

    <select id="list" resultType="com.itxiaole.pojo.Clazz">
        SELECT *
        FROM clazz
        <where>
            <if test="name != null and name != ''">
                name = #{name}
            </if>
            <if test="begin != null">
                AND end_date <![CDATA[ >= ]]> #{begin}
            </if>
            <if test="end != null">
                AND end_date <![CDATA[ < ]]> DATE_ADD(#{end}, INTERVAL 1 DAY)
            </if>
        </where>
        ORDER BY id DESC
    </select>
</mapper>